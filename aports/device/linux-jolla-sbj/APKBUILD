# APKBUILD based on linux-vanilla aport. Changes:
# - disabled module installation
# - add !check !tracedeps
# - package: just install zimage and kernel.release, because the kernel config
#	does not generate modules or dtb files
# - do not create -dev subpackage (makes no sense without module support)
#
# Kernel config based on: arch/arm/configs/lineageos_mako_defconfig
# Changes:
# - enable devtmpfs (needed for udev -> touch support in weston)

_vendor=jolla
_flavor=jolla-sbj
_hash="2.0.5.6"
_config="config-${_flavor}.armhf"

pkgname=linux-${_flavor}
pkgver=3.4.0
case $pkgver in
	*.*.*)  _kernver=${pkgver%.*};;
	*.*) _kernver=$pkgver;;
esac
pkgrel=3
arch="armhf"
pkgdesc="Jolla phone kernel from djselbeck with opensource wlan drivers"
url="https://github.com/djselbeck/sailfishos_kernel_jolla_msm8930/archive/master.zip"
depends="postmarketos-mkinitfs"
makedepends="perl python sed installkernel bash gmp-dev bc linux-headers elfutils-dev"
options="!strip !check !tracedeps"
install=
source="
	$pkgname-$_hash.zip::https://github.com/djselbeck/sailfishos_kernel_jolla_msm8930/archive/master.zip
	$_config
	WCNSS_qcom_wlan_nv.bin
	compiler-gcc6.h
	duplicate-return-address-definition.patch
	kgsl-iommu-locks.patch
	fix-timeconst.patch
"
subpackages=""
license="GPL2"

_abi_release=${pkgver}
_carch="arm"
HOSTCC="${CC:-gcc}"
HOSTCC="${HOSTCC#${CROSS_COMPILE}}"

kver="sailfishos_kernel_jolla_msm8930"
ksrcdir="$srcdir/sailfishos_kernel_jolla_msm8930-master"
kernelarchive="$srcdir/$pkgname-$_hash.zip"

msg "## srcdir:  ${srcdir}"
msg "## ksrcdir: ${ksrcdir}"

prepare() {
	msg "## prepare()"
	local _patch_failed=
	cd "$srcdir"
	unzip -n "$kernelarchive"
	cd "$ksrcdir"

	# first apply patches in specified order
	for i in $source; do
		case $i in
		*.patch)
			msg "Applying $i..."
			if ! patch -s -p1 -N -i "$srcdir"/$i; then
				echo $i >>failed
				_patch_failed=1
			fi
			;;
		esac
	done

	if ! [ -z "$_patch_failed" ]; then
		error "The following patches failed:"
		cat failed
		return 1
	fi

	# gcc6 support
	 cp -v "$srcdir/compiler-gcc6.h" "$ksrcdir/include/linux/"

	mkdir -p "$srcdir"/build
	
	make mrproper
	cp -v "$srcdir"/$_config "$srcdir"/build/.config || return 1
	mkdir -p "$srcdir"/build/firmware/wlan/prima
	cp -v "$srcdir"/WCNSS_qcom_wlan_nv.bin "$srcdir"/build/firmware/wlan/prima/ || return 1
	make -C "$ksrcdir" O="$srcdir"/build ARCH="$_carch" HOSTCC="$HOSTCC" silentoldconfig
}

# this is so we can do: 'abuild menuconfig' to reconfigure kernel
menuconfig() {
	msg "## menuconfig()"
	cd "$srcdir"/build || return 1
	make ARCH="$_carch" menuconfig
	cp .config "$startdir"/$_config
}

build() {
	msg "## build()"
	cd "$srcdir"/build
	unset LDFLAGS
	make mrproper
	cp -v "$srcdir"/$_config "$srcdir"/build/.config || return 1
	mkdir -p "$ksrcdir"/firmware/wlan/prima
	cp -v "$srcdir"/WCNSS_qcom_wlan_nv.bin "$ksrcdir"/firmware/wlan/prima/ || return 1
	make ARCH="$_carch" CC="${CC:-gcc}" \
		KBUILD_BUILD_VERSION="$((pkgrel + 1 ))-Alpine" \
		|| return 1
}

package() {
	msg "## package()"
	install -Dm644 "$srcdir/build/arch/arm/boot/zImage" \
		"$pkgdir/boot/vmlinuz-$_flavor"

	install -D "$srcdir/build/include/config/kernel.release" \
		"$pkgdir/usr/share/kernel/$_flavor/kernel.release"
}

